@page
@model GasolinArchiveModel
@{
    ViewData["Title"] = "Gasolin Archive";
}
<div class="container">
   <div class="Archive-header">
        <h1 class="Archive-title">Gasolin Archive</h1>

        <p class="archive-description">Here are some images and video clips of their work.</p>
   </div> 

    <!-- Images -->
    <div class="row">
        <div class="col-md-3">
            <img src="/images/gasolin1.jpg" class="image-container" alt="Gasolin Image 1">
            <p class="description">Official press foto.</p>
        </div>
        <div class="col-md-3">
            <img src="/images/gasolin2.jpg" class="image-container" alt="Gasolin Image 2">
            <p class="description">"Gasolin members spending time off stage in a relaxed moment."</p>
        </div>
        <div class="col-md-3">
            <img src="/images/gasolin3.jpg" class="image-container" alt="Gasolin Image 3">
            <p class="description">Performing live out door.</p>
        </div>
        <div class="col-md-3">
            <img src="/images/gasolin4.jpg" class="image-container" alt="Gasolin Image 4">
            <p class="description">Having fun in city center.</p>
        </div>
    </div>

    <!-- Videos -->
    <div class="row mt-4">
        <div class="col-md-6">
            <video controls class="video-container">
                <source src="/videos/gasolin1.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <p class="description">One of Gasolin’s most iconic songs that shaped Danish rock history.</p>
        </div>
        <div class="col-md-6">
            <video controls class="video-container">
                <source src="/videos/gasolin2.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <p class="description">Experience Gasolin’s raw energy and electrifying stage presence in this 1976 concert.</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <video controls class="video-container">
                <source src="/videos/gasolin3.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <p class="description">A glimpse into Gasolin’s rise, creative process, and impact on Danish rock music.</p>
        </div>
        <div class="col-md-6">
            <video controls class="video-container">
                <source src="/videos/gasolin4.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <p class="description">How Gasolin’s music continues to inspire generations even after their breakup.</p>
        </div>
    </div>
</div>
