@page
@model GasolinBiographyModel
@{
    ViewData["Title"] = "Gasolin Band Members";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/your-stylesheet.css" /> <!-- Link to CSS -->
</head>
<body class="yellow-page">
    <div class="title-container">
        <h1 style="color:black">@ViewData["Title"]</h1>
    </div>

    <div class="page-container">
        @foreach (var member in Model.Members)
        {
            <div class="member-card" style="background-color: orange">
                <img class="band-image card-img-top" src="@member.ImagePath" alt="@member.Name" />
                <div class="card-body">
                    <h2 class="member-title">@member.Name</h2>
                    <h3>Role: @member.Role</h3>
                    <p class="member-text">@member.Biography</p>
                </div>
            </div>
        }
    </div>
</body>
</html>