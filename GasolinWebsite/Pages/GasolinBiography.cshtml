@page
@model GasolinBiographyModel
@{
    ViewData["Title"] = "Gasolin Band Members";
}

<h1>@ViewData["Title"]</h1>
<div class="title-container">
    <h1>@ViewData["Title"]</h1>
</div>
@foreach (var member in Model.Members)
{
    <div class="member-card">
        <img src="@member.ImagePath" alt="@member.Name" class="band-image" />
        <h2 class="member-title">@member.Name</h2>
        <h3>Role: @member.Role</h3>
        <p class="member-text">@member.Biography</p>
    </div>
}

<body class="yellow-page"> <!-- A container to control back ground clour
    <div class="page-container">
        @foreach (var member in Model.Members)
        {
            <div class="member-card">
                <img src="@member.ImagePath" alt="@member.Name" class="band-image" />
                <h2 class="member-title">@member.Name</h2>
                <p class="member-text"><strong>Role:</strong> @member.Role</p>
                <p class="member-text">@member.Biography</p>
            </div>
        }
    </div>
</body>