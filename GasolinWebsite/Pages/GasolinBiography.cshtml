@page
@model GasolinBiographyModel
@{
    ViewData["Title"] = "Gasolin Band Members";
}


    <div class="title-container"">
        <h1 style=" color:aliceblue">@ViewData["Title"]</h1>
    </div>
    @foreach (var member in Model.Members)
    {
        <div class="member-card">
        <img class ="band-image" classe="card-img-top" src="@member.ImagePath" alt="@member.Name" />
            <div class="card-body">
                <h2 class="member-title">@member.Name</h2>
                <h3>Role: @member.Role</h3>
                <p class="member-text">@member.Biography</p>
            </div>
        </div>
    }



<body class="yellow-page"> <!-- A container to control back ground clour
