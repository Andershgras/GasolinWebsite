@page
@model IndexModel
@{
    ViewData["Title"] = "Memorabilia";
    var memorabiliaItems = new List<(string ImgSrc, string Description)>
    {
        ("/images/memorabilia1.png", "Original 1976 US Epic label 10-track english language vinyl LP"),
        ("/images/memorabilia2.png", "Vurderet til 25.000: Guitar med Gasolin-medlemmernes autografer på auktion"),
        ("/images/memorabilia3.png", "BENZINSLUGEREN BETZY. For Gasolin’ gik det så godt, at de endte med at købe det største dollargrin de kunne få fingrene i. Valget endte på en 1961 Plymouth Fury, som sidenhen er blevet et ikon på Gasolin’s storhed og succes. "),
        ("/images/memorabilia4.png", "Gasolin’ T-shirt – Vingelogo"),
        ("/images/memorabilia5.png", "Vægmaleriet i Andy's Bar"),
    };
}

<!-- Memorabilia Title -->
<div class="memorabilia-title">
    <h1>General Memorabilia</h1>
</div>
<br />
<!-- Main container til memorabilia karusellen -->
<div class="memorabilia-container">
    <!-- Hidden Radio Buttons for Navigation -->
    @for (int i = 0; i < memorabiliaItems.Count; i++)
    {
        <!-- Hver radio knap kontrollere hvilken item bliver vist i karusellen -->
        <input type="radio" name="carousel" id="slide-@i" class="carousel-radio" @(i == 0 ? "checked" : "")>
    }

    <!-- Memorabilia Items Wrapper -->
    <div class="memorabilia-wrapper">
        <div class="memorabilia-items">
            @foreach (var item in memorabiliaItems)
            {
                <div class="memorabilia-box">
                    <img src="@item.ImgSrc"> <!-- Display billede-->
                    <p>@item.Description</p> <!-- Display beskrivelse under billede-->
                </div>
            }
        </div>
    </div>

    <!-- Navigation Prikker -->
    <div class="carousel-navigation">
        @for (int i = 0; i < memorabiliaItems.Count; i++)
        {
           <!-- Labels er navigations prikkerne så vi kan skifte mellem items -->
            <label for="slide-@i" class="nav-btn"></label>
        }
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* Baggrund Style */
    html, body {
        background-image: url('/images/Gold.png?v=1');
        background-repeat: repeat;
        background-size: cover;
        background-position: center;
        margin: 0;
        padding: 0;
    }

     
   

    /* Centrer container */
    .memorabilia-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
    }

    /* Hide Radio Buttons */
    .carousel-radio {
        display: none;
    }

    /* Memorabilia Wrapper */
    .memorabilia-wrapper {
        width: 320px; /* Viser 1 Box ad gangen, sæt til 640px hvis vi vil vise 2 box ad gangen */
        overflow: hidden;
        border-radius: 10px;
    }

    /* Memorabilia Items (Række af boxe) */
    .memorabilia-items {
        display: flex;
        width: calc(320px * @memorabiliaItems.Count);
        transition: transform 0.5s ease-in-out;
    }

    /* Individuel Box Style */
    .memorabilia-box {
        width: 320px;
        background: lightyellow;
        padding: 15px;
        text-align: center;
        border-radius: 10px;
    }

    .memorabilia-box img {
        width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .memorabilia-box p {
        font-size: 1rem;
        color: black;
        margin-top: 10px;
    }

    /* Navigation Prikker */
    .carousel-navigation {
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .nav-btn {
        width: 15px;
        height: 15px;
        background: gray;
        border-radius: 50%;
        cursor: pointer;
    }

    .nav-btn:hover {
        background: black;
    }
</style>
<!-- Generate Dynamic CSS -->
@{ 
    <style>
        @for (int i = 0; i < memorabiliaItems.Count; i++)
        {
            @: #slide-@i:checked ~ .memorabilia-wrapper .memorabilia-items { transform: translateX(-@(i * 320)px); }
        }
    </style>
}
<div class ="row">   
        <p></p>
</div>